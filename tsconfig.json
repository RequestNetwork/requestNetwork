{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./packages",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "es2018"
    ]
  }
}
