{
  "name": "@requestnetwork/currency",
  "version": "0.8.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Currency tools for Request Network packages.",
  "keywords": [
    "requestnetwork",
    "currency",
    "utils"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RequestNetwork/requestNetwork.git"
  },
  "homepage": "https://github.com/RequestNetwork/requestNetwork/tree/master/packages/currency#readme",
  "bugs": {
    "url": "https://github.com/RequestNetwork/requestNetwork/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "shx rm -rf dist tsconfig.tsbuildinfo",
    "lint": "eslint \"src/**/*.ts\"",
    "prepare": "yarn run build",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "add-erc20": "ts-node scripts/addErc20.ts"
  },
  "dependencies": {
    "@metamask/contract-metadata": "1.28.0",
    "@requestnetwork/types": "0.35.0",
    "@requestnetwork/utils": "0.35.0",
    "multicoin-address-validator": "0.5.2",
    "node-dijkstra": "2.5.0",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.13",
    "@types/multicoin-address-validator": "0.5.0",
    "@types/node-dijkstra": "2.5.2",
    "ethers": "5.5.1",
    "jest": "26.4.2",
    "prettier": "2.1.1",
    "shx": "0.3.2",
    "source-map-support": "0.5.19",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "typescript": "4.4.4"
  }
}
