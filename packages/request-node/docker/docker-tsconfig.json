{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2015",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./packages",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2018"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
