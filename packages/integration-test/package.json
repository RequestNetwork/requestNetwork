{
  "name": "@requestnetwork/integration-test",
  "version": "0.16.0",
  "private": true,
  "description": "Integration tests for the request system.",
  "keywords": [
    "requestnetwork",
    "integration-test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RequestNetwork/requestNetwork.git"
  },
  "homepage": "https://github.com/RequestNetwork/requestNetwork/tree/master/packages/integration-test#readme",
  "bugs": {
    "url": "https://github.com/RequestNetwork/requestNetwork/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "directories": {
    "test": "test"
  },
  "files": [
    "test"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "shx rm -rf dist tsconfig.tsbuildinfo",
    "lint": "tslint --project . && eslint \"test/**/*.ts\"",
    "lint-staged": "lint-staged",
    "test": "run-s test:node test:layers",
    "test:scheduled": "run-s test:erc20 test:btc",
    "test:layers": "mocha --timeout=10000 --extension ts --require ts-node/register \"test/layers.test.ts\"",
    "test:node": "mocha --timeout=10000 --extension ts --require ts-node/register \"test/node-client.test.ts\"",
    "test:erc20": "mocha --timeout=10000 --extension ts --require ts-node/register \"test/scheduled/erc20.test.ts\"",
    "test:btc": "mocha --timeout=10000 --extension ts --require ts-node/register \"test/scheduled/btc.test.ts\""
  },
  "devDependencies": {
    "@requestnetwork/advanced-logic": "0.16.0",
    "@requestnetwork/data-access": "0.12.0",
    "@requestnetwork/epk-decryption": "0.3.13",
    "@requestnetwork/epk-signature": "0.5.14",
    "@requestnetwork/ethereum-storage": "0.11.0",
    "@requestnetwork/multi-format": "0.4.0",
    "@requestnetwork/payment-detection": "0.19.0",
    "@requestnetwork/request-client.js": "0.19.0",
    "@requestnetwork/request-logic": "0.15.0",
    "@requestnetwork/transaction-manager": "0.15.0",
    "@requestnetwork/types": "0.18.0",
    "@requestnetwork/utils": "0.17.0",
    "@truffle/hdwallet-provider": "1.0.18",
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.7",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "lint-staged": "8.1.3",
    "mocha": "6.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "sinon": "8.1.1",
    "ts-node": "8.6.2",
    "tslint": "5.12.1",
    "typescript": "3.7.2",
    "web3-eth": "1.2.1"
  }
}
