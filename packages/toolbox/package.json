{
  "name": "@requestnetwork/toolbox",
  "version": "0.15.0",
  "private": true,
  "description": "Toolbox for Request Network.",
  "keywords": [
    "requestnetwork",
    "toolbox"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RequestNetwork/requestNetwork.git"
  },
  "homepage": "https://github.com/RequestNetwork/requestNetwork/tree/master/packages/toolbox#readme",
  "bugs": {
    "url": "https://github.com/RequestNetwork/requestNetwork/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "src"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "request-toolbox": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "yarn run build",
    "cli": "cross-env NODE_ENV=development ts-node src/cli.ts",
    "chainlinkPath": "yarn -s cli listAggregators",
    "currencyHash": "yarn cli currencyHash",
    "referenceCalculator": "yarn cli referenceCalculator"
  },
  "dependencies": {
    "@requestnetwork/currency": "0.18.0",
    "@requestnetwork/epk-signature": "0.9.0",
    "@requestnetwork/ethereum-storage": "0.36.0",
    "@requestnetwork/payment-detection": "0.45.0",
    "@requestnetwork/request-client.js": "0.49.0",
    "@requestnetwork/smart-contracts": "0.38.0",
    "@requestnetwork/types": "0.45.0",
    "@requestnetwork/utils": "0.45.0",
    "ethers": "5.7.2",
    "inquirer": "8.2.0",
    "tslib": "2.5.0",
    "yargs": "17.6.2"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.38",
    "@types/inquirer": "8.1.3",
    "@types/yargs": "17.0.14",
    "cross-env": "7.0.2",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  }
}
