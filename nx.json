{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint"]
      }
    }
  },
  "targetDefaults": {
    "lint": {
      "dependsOn": ["^lint"]
    },
    "build": {
      "dependsOn": ["^build", "lint"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    }
  }
}
