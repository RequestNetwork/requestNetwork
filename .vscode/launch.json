{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Request Node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "args": ["${workspaceFolder}/packages/request-node/src/server.ts"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}/packages/request-node",
      "protocol": "inspector"
    },
    {
      "name": "Client side test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "--require",
        "ts-node/register",
        "${workspaceFolder}/packages/request-client.js/test/*.test.ts",
        "--colors"
      ],
      "cwd": "${workspaceFolder}/packages/request-client.js/",
      "protocol": "inspector",
      "sourceMaps": true
    },
    {
      "name": "Integration test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "--require",
        "ts-node/register",
        "${workspaceFolder}/packages/integration-test/test/index.test.ts",
        "--colors"
      ],
      "cwd": "${workspaceFolder}/packages/integration-test/",
      "protocol": "inspector",
      "sourceMaps": true
    }
  ]
}
