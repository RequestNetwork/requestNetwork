{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Request Node",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/packages/request-node/src/server.ts"
      ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}/packages/request-node",
      "protocol": "inspector"
    },
    {
      "name": "Client side test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "--require",
        "ts-node/register",
        "${workspaceFolder}/packages/request-client.js/test/index.test.ts",
        "--colors"
      ],
      "cwd": "${workspaceFolder}/packages/request-client.js/",
      "protocol": "inspector",
      "sourceMaps": true
    },
    {
      "name": "Integration test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--no-timeouts",
        "--require",
        "ts-node/register",
        "${workspaceFolder}/packages/integration-test/test/index.test.ts",
        "--colors"
      ],
      "cwd": "${workspaceFolder}/packages/integration-test/",
      "protocol": "inspector",
      "sourceMaps": true
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/packages/integration-test/node_modules/.bin/jest",
      "cwd": "${workspaceFolder}/packages/integration-test/",
      "args": [
        "--config",
        "${workspaceFolder}/packages/integration-test/jest.config.js",
        "--verbose",
        "-i",
        "--runInBand",
        "--watchAll=false"
      ]
    }
  ]
}
